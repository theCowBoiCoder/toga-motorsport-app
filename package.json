    "@electron/fuses": "^1.8.0",
    "babel-loader": "^10.0.0",
    "concurrently": "^9.1.2",
    "electron": "^36.4.0",
    "tailwindcss": "^3.4.17",
    "webpack": "^5.99.9",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.1",
    "node-fetch": "^2.7.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "update-electron-app": "^3.1.1"
  }
